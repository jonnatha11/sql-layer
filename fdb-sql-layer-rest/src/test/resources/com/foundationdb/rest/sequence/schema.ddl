CREATE TABLE customers(
    cid INT NOT NULL PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
    first_name varchar(32),
    last_name varchar(32)
);

CREATE TABLE addresses
(
  aid int NOT NULL PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
  cid int NOT NULL,
  state CHAR(2),
  city VARCHAR(100),
  GROUPING FOREIGN KEY (cid) REFERENCES customers(cid)
);

CREATE TABLE orders(
    oid INT NOT NULL PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY (START WITH 100),
    cid INT,
    odate DATETIME,
    GROUPING FOREIGN KEY(cid) REFERENCES customers(cid)
);

CREATE TABLE items(
    iid INT NOT NULL PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY (START WITH 1000),
    oid INT,
    sku INT,
    GROUPING FOREIGN KEY(oid) REFERENCES orders(oid)
);
